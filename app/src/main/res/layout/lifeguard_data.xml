<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="415dp"
        android:layout_height="50dp"
        android:background="#2990E3"
        android:paddingStart="5dp"
        android:text="@string/bluenoser_beach"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="415dp"
        android:layout_height="50dp"
        android:layout_marginTop="112dp"
        android:paddingStart="5dp"
        android:text="@string/visual_water_conditions"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/visualWaterConditionsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beach Capacity"
        app:layout_constraintBottom_toTopOf="@+id/lifeguardBeachCapacitySpinner"
        app:layout_constraintTop_toBottomOf="@+id/visualWaterConditionsSpinner"
        tools:layout_editor_absoluteX="165dp" />

    <Spinner
        android:id="@+id/lifeguardBeachCapacitySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/lifeGuardSurveyButton"
        android:layout_width="101dp"
        android:layout_height="49dp"
        android:layout_marginTop="232dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifeguardBeachCapacitySpinner" />


</androidx.constraintlayout.widget.ConstraintLayout>