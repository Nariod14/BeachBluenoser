<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/beachItem"
    android:layout_width="195dp"
    android:layout_height="90dp"
    android:layout_marginTop="5dp"


    android:background="#8F8F8F"
    android:orientation="horizontal">
    <!-- android:background="@drawable/rounded_button_3"-->

    <FrameLayout
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_marginRight="0dp"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/BeachImage"
            android:layout_width="195dp"
            android:layout_height="125dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/BeachName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:translationY="75dp" />

        <TextView
            android:id="@+id/beachItemCapacityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacity: "
            android:textSize="0sp" />

        <TextView
            android:id="@+id/visualWaterConditionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Conditions:"
            android:textSize="0sp" />

    </FrameLayout>

</LinearLayout>